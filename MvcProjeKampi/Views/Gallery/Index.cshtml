@using EntityLayer.Concrete
@model List<ImageFile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Galeri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                    <li class="breadcrumb-item active">Galeri</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="col-12">
    <div class="card card-primary">
        <div class="card-header">
            <div class="card-title">
                Sözlük Galerisi
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-2">
                        <a href="@item.ImagePath" data-toggle="lightbox" data-title="@item.ImageName" data-gallery="gallery">
                            <img src="@item.ImagePath" style="height: 200px; width: 250px;" class="img-fluid mb-2" alt="white sample" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>