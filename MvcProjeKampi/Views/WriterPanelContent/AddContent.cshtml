@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Başlık İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Yazar Paneli</a></li>
                    <li class="breadcrumb-item"><a href="#">Başlık İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yeni Başlık Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">İçerik Girişi</h3>
    </div>
    @using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
    {
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" name="HeadingId" value="@ViewBag.Id" />
                @Html.Label("İçerik")
                @Html.TextAreaFor(x => x.ContentValue, 4, 30, new { @class = "form-control", placeholder = "İçeriği yazın" })
                @Html.ValidationMessageFor(x => x.ContentValue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>