@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Başlık İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                    <li class="breadcrumb-item"><a href="#">Başlık İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yeni Başlık Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Başlık Ekle</h3>
    </div>
    @using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
    {
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Başlık Adı")
                        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control", placeholder = "Başlığın adını yazın" })
                        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Kategori")
                        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar")
                        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.Writers, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>