@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Yazar İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                    <li class="breadcrumb-item"><a href="#">Yazar İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yazar Bilgilerini Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Yazar Ekle</h3>
    </div>
    @using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
    {
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.WriterId)
                        @Html.Label("Yazar Adı")
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", placeholder = "Yazarın adını yazın" })
                        @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar Soyadı")
                        @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control", placeholder = "Yazarın soyadını yazın" })
                        @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar E-Posta Adresi")
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", placeholder = "Yazarın e-posta adresini yazın" })
                        @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar Ünvanı")
                        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control", placeholder = "Yazarın başlığını yazın" })
                        @Html.ValidationMessageFor(x => x.WriterTitle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar Şifresi")
                        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", placeholder = "Yazarın şifresini yazın" })
                        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("Yazar Görseli")
                        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control", placeholder = "Yazarın görselini ekleyin" })
                        @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Yazar Hakkında")
                @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control", placeholder = "Yazar hakkında bir şeyler yazın" })
                @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>