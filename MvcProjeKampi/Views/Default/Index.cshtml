@using EntityLayer.Concrete
@model List<Content>

@{
    Layout = null;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Başlık İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Yazar Paneli</a></li>
                    <li class="breadcrumb-item"><a href="#">Başlık İşlemleri</a></li>
                    <li class="breadcrumb-item active">Başlıklara Ait Yazılar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title m-0">Yazılar Listesi</h3>
        @*<a class="btn btn-primary ml-auto" href="/Heading/AddHeading">Yeni Başlık Ekle</a>*@
    </div>
    <div class="card-body">
        <div class="timeline timeline-inverse">
            @foreach (var item in Model)
            {
                <div class="time-label">
                    <span class="bg-primary">
                         @item.Writer.WriterName @item.Writer.WriterSurname
                    </span>
                </div>

                <div>
                    <i class="fas fa-envelope bg-primary"></i>

                    <div class="timeline-item">
                        <span class="time"><i class="far fa-clock"></i> @item.ContentDate.ToString("dd.MM.yyyy | HH:mm")</span>

                        <h3 class="timeline-header"><a href="#">@item.Heading.HeadingName</a></h3>

                        <div class="timeline-body">
                            @item.ContentValue
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>