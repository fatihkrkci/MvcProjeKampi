@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Kategori İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                    <li class="breadcrumb-item"><a href="#">Kategori İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yeni Kategori Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Kategori Ekle</h3>
    </div>
    @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
    {
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Kategori Adı")
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adını yazın" })
                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Açıklama")
                @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", placeholder = "Kategori açıklamasını yazın" })
                @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>