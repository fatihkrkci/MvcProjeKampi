@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Hakkımızda İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                    <li class="breadcrumb-item active">Hakkımızda İşlemleri</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-lg">
            Yeni Hakkımızda Yazı Girişi
        </button>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Hakkımda Yazısı 1</th>
                    <th>Hakkımda Yazısı 2</th>
                    <th>Hakkımda Görsel 1</th>
                    <th>Hakkımda Görsel 2</th>
                    <th>Seçenekler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AboutDetail1</td>
                        <td>@item.AboutDetail2</td>
                        <td>@item.AboutImage1</td>
                        <td>@item.AboutImage2</td>
                        <td>
                            <a class="btn btn-success" href="#">Aktif Yap</a>
                            <a class="btn btn-danger" href="#">Pasif Yap</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Action("AboutPartial", "About")